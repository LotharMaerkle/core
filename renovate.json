{
  "extends": [
    "config:base"
  ],
  "baseBranches": ["release"],
  "automerge": true,
  "major": {
    "automerge": false,
    "masterIssueApproval": true
  },
  "minor": {
    "automerge": false
  },
  "separateMultipleMajor": true,
  "rangeStrategy": "pin",
  "node": {
    "supportPolicy": ["lts"]
  },
  "travis": { "enabled": true },
  "engines": {
    "rangeStrategy": "widen"
  },
  "packageRules": [
    {
      "depTypeList": ["devDependencies"],
      "rangeStrategy": "widen"
    }
  ],
  "labels": [
    "dependencies",
    "renovate"
  ],
  "prHourlyLimit": 2,
  "prConcurrentLimit": 5,
  "rebaseStalePrs": true,
  "masterIssue": true
}
